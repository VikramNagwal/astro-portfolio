---
import "@fontsource-variable/dosis";

interface Project {
  title: string;
  image: string;
  description: string;
  link: string;
  keyPoints: string[];
  technologies: string[];
}

const { keyPoints } = Astro.props;
---

<section class="text-white mt-6">
  <div
    class="flex flex-col md:flex-row p-2 border border-slate-200 rounded-md cursor-pointer"
  >
    <div class="w-full md:w-64 h-48 p-2 overflow-hidden">
      <img
        src="https://images.unsplash.com/photo-1590935216525-e35827458736?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8YXBwbGljYXRpb258ZW58MHx8MHx8fDA%3D"
        alt="image not found"
        class="w-full h-full object-cover"
      />
    </div>
    <div class="flex flex-col px-2 md:pl-8 mt-4 md:mt-0">
      <h2 class="text-xl font-bold text-[#da7b16]">My Applications</h2>
      <p class="mt-2">Tracking application</p>
      <h3 class="text-lg font-bold text-[#da7b16] mt-4">Key Points</h3>
      <ul class="list-disc list-inside">
        {keyPoints.map((point: string) => <li>{point}</li>)}
      </ul>
    </div>
  </div>
</section>

<style>
  h2 {
    font-family: "Dosis", sans-serif;
  }
</style>
