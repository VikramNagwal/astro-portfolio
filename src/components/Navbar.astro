---
import "@fontsource-variable/dosis";
---

<nav class="max-w-[1280px] mx-auto pt-3 text-white mt-3">
  <div class="flex justify-between items-center px-4 mx-2">
    <h1 class="text-2xl md:text-4xl">hekk</h1>

    <ul class="hidden sm:flex justify-between items-center text-medium">
      <li>showcase</li>
      <li>blogs</li>
      <li>about</li>
    </ul>

    <div class="block sm:hidden" id="menu-toggle-container">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 cursor-pointer"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        id="menu-toggle"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </div>

    <div>
      <button
        class="rounded-full p-2 md:px-4 md:py-3 bg-[#da7b16] hover:bg-[#0b1678] duration-300 ease-in-out font-[dosis]"
        >Get Resume</button
      >
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-64 bg-transparent backdrop-blur-xl transform translate-x-full transition-transform duration-300 ease-in-out z-50"
  >
    <div class="p-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 cursor-pointer text-white ml-auto"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        id="close-menu"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      <ul class="mt-8 space-y-4">
        <li class="text-white text-xl">Showcase</li>
        <li class="text-white text-xl">blogs</li>
        <li class="text-white text-xl"><a href="/about">about me</a></li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const closeMenu = document.getElementById("close-menu");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuToggleContainer = document.getElementById("menu-toggle-container");

  function openMenu() {
    mobileMenu.classList.remove("translate-x-full");
    document.body.classList.add("menu-open");
  }

  function closeMenuFunc() {
    mobileMenu.classList.add("translate-x-full");
    document.body.classList.remove("menu-open");
  }

  menuToggle.addEventListener("click", openMenu);
  closeMenu.addEventListener("click", closeMenuFunc);

  document.addEventListener("click", (e) => {
    if (
      !mobileMenu.contains(e.target as Node) &&
      !menuToggleContainer.contains(e.target as Node) &&
      !document.body.classList.contains("menu-open")
    ) {
      closeMenuFunc();
    }
  });
</script>

<style>
  h1 {
    font-family: "Dosis Variable", sans-serif;
  }

  li {
    margin-inline: 1rem;
    cursor: pointer;

    &:hover {
      color: #da7b16;
      transition: all 0.3s;
    }
  }

  #mobile-menu li {
    margin-inline: 0;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  #mobile-menu li:last-child {
    border-bottom: none;
  }

  body.menu-open #menu-toggle-container {
    display: none;
  }
</style>
